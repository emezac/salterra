enum TypesOfChallenge {
    STRONG, SOURCEROUS, SWIFT
}

enum Difficulty {
    LOW, MEDIUM, HIGH
}

entity Move {
	moveNumber String
}

entity Prize {
	options String
}

entity Profile {
    id UUID,
    name String required,
    auth0UserId String required,
    socialNetwork String,
    profileImage ImageBlob,
    suspended Boolean,
    suspendedCount Integer,
    banned Boolean,
    aclSetup String,
    createdAt Instant,
    updatedAt Instant,
    deletedAt Instant
}

entity Card {
    id Long,
    thumbnaiImage ImageBlob,
    highresImage ImageBlob,
    createdAt Instant,
    updatedAt Instant,
    deletedAt Instant
}

entity Room {
 id Long,
 introText String,
 haveGatewayDoor Boolean,
 gatewayDoor Integer
}

entity RoomConnection {
 room1 Long,
 room2 Long,
 room3 Long,
 room4 Long,
 room5 Long,
 room6 Long,
 room7 Long,
