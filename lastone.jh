 room30 Long,
 room31 Long,
 room32 Long,
 room33 Long,
 room34 Long,
 room35 Long
}


enum Choice {
     MOVE, PLAY, SKYP
}

entity ChallengeOption {
	optionName String,
    option String
}

entity PrizePool {
	prizeName String
}

entity Activity {
    introText String required,
    successText String required,
    failureText String required,
    skipText String,
    typeChallenge Choice,
    challengeName TypesOfChallenge,
    difficulty Difficulty,    
    //prizeNumber String,
    challangeRating Difficulty,
    sacrificeNumber String,
    skipResult String
}

entity GameStatus {
 id Long,
 moveDate Instant,
 lastRoomVisited Long
}

entity ActivityMoves {
  moveDate Instant
}

relationship OneToOne {
  GameStatus to Profile
}

relationship OneToMany {
    Room to Activity,
    Activity to ChallengeOption,
    Activity to PrizePool,
    Activity to ActivityMoves,
    Move to ActivityMoves,
    Profile to Prize,
    Card to Prize,
    Room to Prize,
    Room to RoomConnection,
    GameStatus to Move,
    PrizePool to Prize
}